extend ../layouts/layout-main
block content
    h3 Edit Information
        form(id="form" method="post", action="/edit")
            input(type="hidden", name="id", value=userToEdit.id)
            //- label Name
            //- br
            //- input(type="text" name="userName")
            br
            label Password
            input(type="password", name="password")        
            br
            label Email
            input(type="text", name="email", value=userToEdit.email)
            br
            if userSession.role == 'admin'
                label Role
                if userToEdit.role == 'user'
                    select(name='role', id='role')
                        option(value='admin') Admin
                        option(value='user' selected) User
                else
                    select(name='role', id='role')
                        option(value='admin' selected) Admin
                        option(value='user') User
                br
            label Age
            input(type="number", name="age", value=userToEdit.age)
            br
            label Answer 1
            input(type="number", name="answer1", value=userToEdit.answer1)
            br
            label Answer 2
            input(type="number", name="answer2", value=userToEdit.answer2)
            br
            label Answer 3
            input(type="number", name="answer3", value=userToEdit.answer3)
            br
            input(type="submit" value="Submit")